@model InForno.Models.VM.OrderDetailsVM

@{
    ViewData["Title"] = "Dettagli Ordine";
}

<h2>Dettagli Ordine</h2>

<div>
    <h4>Ordine #@Model.OrderId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Data Ordine</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Indirizzo</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Note</dd>
    </dl>
</div>

<h4>Prodotti</h4>
<table class="table">
    <thead>
        <tr>
            <th>Prodotto</th>
            <th>Quantità</th>
            <th>Prezzo</th>
            <th>Totale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.ProductPrice.ToString("C")</td>
                <td>@(item.ProductPrice * item.Quantity).ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right"><strong>Totale:</strong></td>
            <td>@Model.Items.Sum(item => item.ProductPrice * item.Quantity).ToString("C")</td>
        </tr>
    </tfoot>
</table>

<a asp-action="Orders" class="btn btn-primary">Torna agli Ordini</a>