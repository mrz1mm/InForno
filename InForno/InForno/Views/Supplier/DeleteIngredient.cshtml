@model InForno.Models.DTO.UpdateIngredientDTO

@{
    ViewData["Title"] = "Conferma Eliminazione Ingrediente";
}

<h1>Conferma Eliminazione Ingrediente</h1>

<h3>Sei sicuro di voler eliminare questo ingrediente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="ConfirmDeleteIngredient" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="IngredientId" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Elimina" class="btn btn-danger" />
        </div>
    </form>

    <div>
        <a asp-action="Ingredients">Torna alla lista</a>
    </div>
</div>
