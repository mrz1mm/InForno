@model InForno.Models.DTO.IngredientDTO

@{
    ViewData["Title"] = "DeleteIngredient";
}

<h1>Conferma Eliminazione Ingrediente; @Model.Name</h1>

<h3>Sei sicuro di voler eliminare questo ingrediente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IngredientId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IngredientId)
        </dd>
    </dl>

    <form asp-action="DeleteIngredient" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="IngredientId" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Ingredients">Back to List</a>
    </div>
</div>
