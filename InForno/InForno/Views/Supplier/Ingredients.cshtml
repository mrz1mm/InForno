@model IEnumerable<InForno.Models.Ingredient>

@{
    ViewData["Title"] = "Ingredients";
}

<h1>Ingredienti</h1>

@if (!Model.Any())
{
    <p>Non sono presenti ingredienti nel database.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="UpdateIngredient" asp-route-id="@item.IngredientId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                        <a asp-action="DeleteIngredient" asp-route-id="@item.IngredientId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
