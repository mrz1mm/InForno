@model InForno.Models.DTO.UpdateProductDTO

@{
    ViewData["Title"] = "Update Product";
}

<h1>Update Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryTime" class="control-label"></label>
                <input asp-for="DeliveryTime" class="form-control" />
                <span asp-validation-for="DeliveryTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImageFile" class="control-label"></label>
                <input asp-for="ProductImageFile" class="form-control" type="file" />
                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Current Image</label>
                <div>
                    <img src="@Model.ProductImageUrl" alt="Product Image" style="max-width: 200px; height: auto;" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Ingredients</label>
                @if (ViewData["Ingredients"] != null)
                {
                    var ingredients = ViewData["Ingredients"] as List<SelectListItem>;
                    foreach (var ingredient in ingredients)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Ingredients" value="@ingredient.Value"
                            @(ingredient.Selected ? "checked" : "") />
                            <label class="form-check-label">@ingredient.Text</label>
                        </div>
                    }
                }
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Products">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
