@model InForno.Models.Product

@{
    ViewData["Title"] = "ProductDetail";
}

<h1>ProductDetail</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ProductImageUrl" alt="Product Image" style="max-width: 100px; height: auto;" />
        </dd>
        <dt class="col-sm-2">
            Ingredienti
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var ingredient in Model.Ingredients)
                {
                    <li>@ingredient.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="UpdateProduct" asp-route-id="@Model.ProductId">Update</a> |
    <a asp-action="DeleteProduct" asp-route-id="@Model.ProductId">Delete</a> |
    <a asp-action="Products">Back to List</a>
</div>
