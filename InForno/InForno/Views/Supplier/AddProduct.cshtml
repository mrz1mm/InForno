@model InForno.Models.DTO.AddProductDTO

@{
    ViewData["Title"] = "AddProduct";
}

<h1>AddProduct</h1>

<h4>ProductDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryTime" class="control-label"></label>
                <input asp-for="DeliveryTime" type="text" class="form-control" placeholder="hh:mm:ss" />
                <span asp-validation-for="DeliveryTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImageFile" class="control-label"></label>
                <input asp-for="ProductImageFile" type="file" class="form-control" />
                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ingredients</label>
                @foreach (var ingredient in ViewBag.Ingredients)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Ingredients" value="@ingredient.Value" />
                        <label class="form-check-label">@ingredient.Text</label>
                    </div>
                }
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
